<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="">
    <title>Document</title>
    <link rel="stylesheet" href="/public/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
</head>
<body>

    <h2>Feedback page</h2>
    <p class="feedbackInfo">a simple feedback for allowing users to rate the website out of 1-10 and any additional feedback they want</p>
    <div class="Feedback-box">
        {{#each Feedback}}
         <div class="feedBack-format">
            <h3 class="RatingHead">Rating: {{this.Rating}}</h3>
            <h4>FeedBack:</h4>
            <p>{{this.feedback}}</p>
         </div>
        {{/each}}
    </div>
    

    <div class="feedback-form">
    <form action="/feedback" method="POST" class="" id="FeedBackForm">
    <div class="confession-divs">
        <label for="Rating">Rating:</label>
        <div>
            <select name="Rating" id="Rating">
            <option value="one">1</option>
            <option value="two">2</option>
            <option value="three">3</option>
            <option value="four">4</option>
            <option value="five">5</option>
            <option value="six">6</option>
            <option value="seven">7</option>
            <option value="eight">8</option>
            <option value="nine">9</option>
            <option value="ten">10</option>
            </select>
        </div>
    </div>

    <div class="confession-divs">
        <label for="feedback" class="FeedBackError">Feed-Back:</label>
        <div class="input-container">
            <textarea id="FeedBackArea"name="feedback" rows="7" cols="60"></textarea> <br>
        </div>
    </div>
    <div class="confession-divs">
        <button class="btn btn-primary rounded btn-lg"id="SubmitFeedback" type="submit">Submit</button>
    </div>
    </form>


    </div>


    <script>
    const FeedBack = document.querySelector('#FeedBackArea');
    const SubmittingFeed = document.querySelector('#SubmitFeedback');
    const GetForm = document.querySelector('#FeedBackForm');
    const Puterror = document.querySelector('.FeedBackError');


    SubmittingFeed.addEventListener('click', function(event){
        event.preventDefault();

        const TextAreaTrim = FeedBack.value.trim();
         let errorMessage = document.querySelector('.errorMessage');

        if(TextAreaTrim === ""){
            if(errorMessage === null){
                errorMessage = document.createElement('h3');
                errorMessage.textContent = "please fill out form completely";
                errorMessage.classList.add('errorMessage');
                Puterror.appendChild(errorMessage);

            }
        }

        else{
             const confirmation = confirm("are you sure you want to submit this comment?");
             
            if(confirmation){
                GetForm.submit(); 
                if (errorMessage !== null) { 
                    errorMessage.parentNode.removeChild(errorMessage); 
                }
            }

        }


    })

 </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
 <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>


    
</body>
</html>